<div class="container">
  <table class="table">
    <thead class="thead-dark">
    <% if @presenter.politicians.size == 0 %>,
      <p>Nenhum pol√≠tico cadastrado.</p>
    <% else %>
      <h3>Politicos cadastrados (RJ)</h3>

        <%== pagy_bootstrap_nav(@pagy) %>

      <tr>
        <th>Foto </th>
        <th>Nome </th>
        <th>Partido </th>
        <th>Total </th>
      </tr>
      <% @records.each do |politician|%>
        <tr>
          <td><%= link_to politician_photo(politician), politico_path(politician) %></td>
          <td><%= link_to "#{politician.nome}", politico_path(politician) %></td>
          <td><%= politician.sgpartido %></td>
          <td><%= number_to_currency(@presenter.expenses[politician.id], :unit => "R$") %></td>
        </tr>
      <% end %>
    <% end %>
    </table>

    <%== pagy_bootstrap_nav(@pagy) %>

</div>



