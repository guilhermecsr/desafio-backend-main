<% require 'pry' %>
<table border="1">
  <%= link_to 'Voltar', root_path %>
  <br>
  <% if @presenter.politicians.size == 0 %>
    <p>Nenhum pol√≠tico cadastrado.</p>
    <%= link_to 'Cadastrar politicos', csv_index_path %>
  <% else %>
    <h3>Politicos cadastrados(RJ):</h3>
    <% @presenter.politicians.each do |politician|%>
      <tr>
        <th>Foto: </th>
        <th>Nome: </th>
        <th>Partido: </th>
        <th>valor: </th>
      </tr>
      <tr>
        <td><%= politician_photo(politician) %></td>
        <td><%= link_to "#{politician.nome}", politico_path(politician) %></td>
        <td><%= politician.sgpartido %></td>
        <td><%= number_to_currency(@presenter.expenses[politician.id], :unit => "R$") %></td>
      </tr>
    <% end %>
  <% end %>
</table>
