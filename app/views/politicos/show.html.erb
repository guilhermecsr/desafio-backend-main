<% require 'pry' %>
<table>
  <%= link_to 'Politicos', politicos_path %>
  <br>
  <tr>
    <th>Nome: </th>
    <th>Partido: </th>
    <th>despesas: </th>
  </tr>
  <tr>
    <td><%= @politician.nome %></td>
    <td><%= @politician.sgpartido %></td>
    <td><%= @politician.despesas.count%></td>
  </tr>
</table>
<br>
<table border="1">
  <tr>
    <th>Fornecedor: </th>
    <th>Data: </th>
    <th>Valor: </th>
    <th>URL: </th>
  </tr>
  <% @politician.despesas.each do |despesa| %>
    <tr>
      <td><%= despesa.fornecedor %></td>
      <td><%= despesa.data_emissao %></td>
      <td><%= despesa.valor_liquido %></td>
      <td><%= link_to "Recibo", despesa.url_documento, target: :_blank %></td>
    </tr>
  <% end %>
</table>
